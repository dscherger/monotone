# test for files included/excluded in various outputs

m4_define([INCLUDED], [
files=""
for i in $1
do
        grep work/file$i stdout || files="$files $i"
done
echo "missed: $files"
test -z "$files"
])

m4_define([EXCLUDED], [
files=""
for i in $1
do
        grep work/file$i stdout && files="$files $i"
done
echo "seen: $files"
test -z "$files"
])

