AT_SETUP([key management without a database])

MTN_SETUP

# with no database should work
AT_CHECK((echo foobar; echo foobar) | RAW_MTN --keydir=keys genkey foobar, [], [ignore], [ignore])

AT_CHECK((echo foobar; echo barfoo; echo barfoo) | RAW_MTN --keydir=keys chkeypass foobar, [], [ignore], [ignore])

AT_CHECK(RAW_MTN --keydir=keys ls keys, [], [ignore], [ignore])

AT_CHECK(RAW_MTN --keydir=keys pubkey foobar, [], [ignore], [ignore])

AT_CHECK(RAW_MTN --keydir=keys dropkey foobar, [], [ignore], [ignore])

# with an invalid database should fail
AT_CHECK((echo foo@baz; echo foo@baz) | RAW_MTN --keydir=keys --db=bork genkey foo@baz, [1], [ignore], [ignore])

AT_CLEANUP
