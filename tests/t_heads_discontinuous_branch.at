#  -*- Autoconf -*-

AT_SETUP(['heads' with discontinuous branches])
MTN_SETUP

# This tests the 'heads' command with a graph like:
#
#    r1 (branch1)
#    |
#    r2 (branch2)
#    |
#    r3 (branch1)
#
# 'heads' on branch1 should show only r3, not r1.

# Create R1
AT_DATA(f, [r1 data
])
AT_CHECK(MTN add f, [], [ignore], [ignore])
AT_CHECK(MTN --branch=branch1 commit --message blah-blah, [], [ignore], [ignore])
R1_R_SHA=`BASE_REVISION`

# Sanity check first...
AT_CHECK(MTN --branch=branch1 heads, [], [stdout], [ignore])
AT_CHECK(QGREP($R1_R_SHA stdout))

# Now create R2
AT_DATA(f, [r2 data
])
AT_CHECK(MTN --branch=branch2 commit --message blah-blah, [], [ignore], [ignore])
R2_R_SHA=`BASE_REVISION`

# Now create R3
AT_DATA(f, [r3 data
])
AT_CHECK(MTN --branch=branch1 commit --message blah-blah, [], [ignore], [ignore])
R3_R_SHA=`BASE_REVISION`

# Now check heads on branch1
AT_CHECK(MTN --branch=branch1 heads, [], [stdout], [ignore])
AT_CHECK(QGREP($R1_R_SHA stdout), [1])
AT_CHECK(QGREP($R2_R_SHA stdout), [1])
AT_CHECK(QGREP($R3_R_SHA stdout), [0])

AT_CLEANUP
