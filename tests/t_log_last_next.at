AT_SETUP([log --last=N/--next=N])
MTN_SETUP

ADD_FILE(foo, [foo
])
AT_CHECK(MTN --branch=testbranch commit --message "Addition of foo.",
         [], [ignore], [ignore])
FOO=`BASE_REVISION`

ADD_FILE(bar, [bar
])
AT_CHECK(MTN --branch=testbranch commit --message "Addition of bar.",
         [], [ignore], [ignore])

ADD_FILE(baz, [baz
])
AT_CHECK(MTN --branch=testbranch commit --message "Addition of baz.",
         [], [ignore], [ignore])


AT_CHECK(MTN log --last=0, [1], [], [ignore])

AT_CHECK(MTN log --last=1 | grep '^Revision:', [], [stdout], [ignore])
AT_CHECK(test 1 -eq "`wc -l <stdout`")

AT_CHECK(MTN log --last=2 | grep '^Revision:', [], [stdout], [ignore])
AT_CHECK(test 2 -eq "`wc -l <stdout`")

AT_CHECK(MTN log --last=3 | grep '^Revision:', [], [stdout], [ignore])
AT_CHECK(test 3 -eq "`wc -l <stdout`")


REVERT_TO($FOO)


AT_CHECK(MTN log --next=0, [1], [], [ignore])

AT_CHECK(MTN log --next=1 | grep '^Revision:', [], [stdout], [ignore])
AT_CHECK(test 1 -eq "`wc -l <stdout`")

AT_CHECK(MTN log --next=2 | grep '^Revision:', [], [stdout], [ignore])
AT_CHECK(test 2 -eq "`wc -l <stdout`")

AT_CHECK(MTN log --next=3 | grep '^Revision:', [], [stdout], [ignore])
AT_CHECK(test 3 -eq "`wc -l <stdout`")

AT_CLEANUP
