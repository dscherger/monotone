AT_SETUP([netsync with globs])
MONOTONE_SETUP
NETSYNC_SETUP

ADD_FILE(testfile, [foo
])
COMMIT(1branch1)
REV11=`BASE_REVISION`

AT_CHECK(rm -rf MT)
AT_CHECK(MONOTONE setup .)
ADD_FILE(testfile, [bar
])
COMMIT(1branch2)
REV12=`BASE_REVISION`

AT_CHECK(rm -rf MT)
AT_CHECK(MONOTONE setup .)
ADD_FILE(testfile, [baz
])
COMMIT(2branch1)
REV21=`BASE_REVISION`

NETSYNC_SERVE_START("*")

# check a glob
NETSYNC_CLIENT_N_RUN(2, pull, "*anch2")
AT_CHECK(MONOTONE2 cat revision $REV12, [], [ignore], [ignore])
AT_CHECK(MONOTONE2 cat revision $REV11, [1], [ignore], [ignore])
AT_CHECK(MONOTONE2 cat revision $REV21, [1], [ignore], [ignore])

# check explicit multiple branches
NETSYNC_CLIENT_N_RUN(3, pull, 1branch1 2branch1)
AT_CHECK(MONOTONE3 cat revision $REV12, [1], [ignore], [ignore])
AT_CHECK(MONOTONE3 cat revision $REV11, [], [ignore], [ignore])
AT_CHECK(MONOTONE3 cat revision $REV21, [], [ignore], [ignore])

NETSYNC_SERVE_STOP

AT_CLEANUP
